<% if !@patient.patient_datas.empty? %>
  <p><strong>Patient Data:</strong></p>
  <table class="table">
    <tr>
      <th>Data Type</th>
      <th>Value</th>
      <th>Comment</th>
    </tr>
    <% @patient.patient_datas.each do |data_item| %>
      <tr>
        <td><%= data_item.name %></td>
        <td><%= data_item.value %></td>
        <td><%= data_item.comment %></td>
        <td><%= button_to "Edit", 
                edit_patient_patient_datum_url(@patient, data_item),
                method: :get, class: "btn btn-default" %></td>
        <td><%= button_to "Delete", 
                patient_datum_url(data_item), method: :delete,
                class: "btn btn-default" %></td>
      </tr>  
    <% end %>
  </table>
<% end %>

<%= button_to "Add Data to this patient", 
              new_patient_patient_datum_url(@patient),
              method: :get, class: "btn btn-default" %>