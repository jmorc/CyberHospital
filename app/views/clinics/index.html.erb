<h1>Select a Clinic</h1>

<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clinics.each do |clinic| %>
      <tr>
        <td><%= clinic.name %></td>
        <td><%= link_to 'Show Patients', clinic %></td>
        <% if can? :update, @clinic %>
          <td><%= button_to 'Edit', edit_clinic_url(clinic), 
                method: :get, class: "btn btn-default" %></td>
          <td><%= button_to 'Delete', clinic, 
                method: :delete, data: { confirm: 'Are you sure?' },
                class: "btn btn-default" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, @clinic %>
  <%= button_to 'Add a new clinic', new_clinic_url, 
      method: :get, class: "btn btn-default"   %>
<% end %>
