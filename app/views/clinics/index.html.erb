<h1>Select a Clinic</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clinics.each do |clinic| %>
      <tr>
        <td><%= clinic.name %></td>
        <td><%= link_to 'Show Patients', clinic %></td>
        <td><%= button_to 'Edit', edit_clinic_url(clinic), method: :get %></td>
        <td><%= button_to 'Delete', clinic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add a new clinic', new_clinic_path %>
